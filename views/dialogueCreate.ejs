<%- include('./layouts/header'); -%>
<link rel="stylesheet" href="/css/examCreate.css" />
<body>
  <!-- NAV -->
  <%- include('./layouts/navbar'); -%>

  <!-- MAIN -->
  <main>
    <div class="main-sidebar">
      <div class="profile-sidebar">
        <div class="profile-img">
          <img src="" alt="" />
        </div>
        <div class="profile-info">
          <p><b>Admin</b></p>
          <p>admin</p>
        </div>
      </div>
      <div class="list-sidebar">
        <a href="/">Beranda</a>
        <a href="/dialogues" class="selected">Dialogues</a>
      </div>
    </div>

    <div class="main-content">
      <div class="main-background">
        <form id="submit-form">
          <div class="main-title">
            <h2>
              Create New Dialogue
              <span style="color: #ff4c4c; font-size: 0.7rem"
                >*must be filled</span
              >
            </h2>
          </div>
          <div class="main-input">
            <label for="">
              Character Name<span style="color: #ff4c4c"> *</span>
            </label>
            <input
              class="exam-type"
              type="text"
              name="exam_name"
              id=""
              required
              placeholder="masukan nama ujian"
            />
            <label for=""
              >Gender<span style="color: #ff4c4c"> *</span></label
            >

            <select name="exam_type" class="exam-type" required>
              <option value="">--Choose Gender--</option>
              <option value="">Man</option>
              <option value="">Woman</option>
            </select>
          </div>
          <button class="main-create-question" type="button" id="add-question">
            Create Dialogue
          </button>
          <div class="submit-layer">
            <div class="submit-question">
              <img src="/img/warning-alt.png" alt="" width="150" />
              <p>Apakah anda sudah yakin selesai?</p>
              <div class="submit-buttons">
                <button class="ubah-button" type="button">Ubah</button>
                <button class="selesai-button" type="submit">Selesai</button>
              </div>
            </div>
          </div>
          <div class="file-layer">
            <div class="file-toolarge">
              File terlalu besar <br />
              max: 200kb
              <button>Ok</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>
<%- include('./layouts/footer'); -%>
<script src="/js/examCreate.js"></script>
